    <screen name="StoreManagement">
        <section>
            <actions>
                <set field="titleProperty" value="PageTitleViewPartyProfile"/>
                <set field="tabButtonItem" value="viewprofile"/>
                <script location="component://productfromthailand/groovyScripts/MyProducts.groovy"/>

                <entity-and entity-name="PartyContent" list="checkImportIdImgs" filter-by-date="true">
                    <field-map field-name="partyId" from-field="parameters.partyId"/>
                    <field-map field-name="partyContentTypeId" value="INTERNAL"/>
                </entity-and>
            </actions>
            <widgets>
                <section>
                    <condition>
                        <if-has-permission permission="MYPORTAL" action="_SUPPLIER"/>
                    </condition>
                    <widgets>
                        <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                            <decorator-section name="body">
                                <platform-specific><html><html-template location="component://productfromthailand/webapp/ecommerce/customer/StoreManagement.ftl"/></html></platform-specific>
                            </decorator-section>
                        </decorator-screen>
                    </widgets>
                    <fail-widgets>
                        <section>
                            <condition>
                                <if-empty field="checkImportIdImgs"/>
                            </condition>
                            <widgets>
                                <section>
                                    <condition>
                                        <if-compare-field field="parameters.partyId" operator="equals" to-field="userLogin.partyId"/>
                                    </condition>
                                    <widgets>
                                        <include-screen name="VerifySupplier" location="component://productfromthailand/widget/CustomerScreens.xml"/>
                                    </widgets>
                                    <fail-widgets>
                                        <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                                            <decorator-section name="body">
                                                <container style="container">
                                                    <container style="panel panel-smart">
                                                        <label style="h2" text="${uiLabelMap.CommonNotification} ${uiLabelMap.CommonMessage}"/>
                                                        <label style="h4 text" text="${uiLabelMap.PartyInformationNotBelongToYou}"/>
                                                    </container>
                                                </container>
                                            </decorator-section>
                                        </decorator-screen>
                                    </fail-widgets>
                                </section>
                            </widgets>
                            <fail-widgets>
                                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                                    <decorator-section name="body">
                                        <container style="container">
                                            <container style="panel panel-smart">
                                                <label style="h2" text="${uiLabelMap.CommonNotification} ${uiLabelMap.CommonMessage}"/>
                                                <label style="h4 text" text="${uiLabelMap.PFTPWaitingForApproval}"/>
                                            </container>
                                        </container>
                                    </decorator-section>
                                </decorator-screen>
                            </fail-widgets>
                        </section>
                    </fail-widgets>
                </section>
            </widgets>
        </section>
    </screen>

    <screen name="SupplierInvoiceList">
        <section>
            <actions>
                <set field="myCompanyId" from-field="userLogin.partyId"/>
                <entity-condition entity-name="Invoice" list="invoiceslistexternal">
                    <condition-list combine="and">
                        <condition-expr field-name="partyIdFrom" operator="equals" from-field="myCompanyId"/>
                        <condition-expr field-name="invoiceTypeId" operator="equals" value="PURCHASE_INVOICE"/>
                        <condition-list combine="or">
                            <condition-expr field-name="statusId" operator="equals" value="INVOICE_APPROVED"/>
                            <condition-expr field-name="statusId" operator="equals" value="INVOICE_SENT"/>
                            <condition-expr field-name="statusId" operator="equals" value="INVOICE_READY"/>
                            <condition-expr field-name="statusId" operator="equals" value="INVOICE_PAID"/>
                        </condition-list>
                    </condition-list>
                    <order-by field-name="invoiceDate DESC"/>
                </entity-condition>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                <decorator-section name="body">
                    <platform-specific><html><html-template location="component://productfromthailand/webapp/ecommerce/customer/SupplierInvoiceList.ftl"/></html></platform-specific>
                </decorator-section>
            </decorator-screen>
            </widgets>
        </section>
    </screen>

